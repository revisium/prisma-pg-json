generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model TestTable {
  id         String   @id @default(uuid())
  name       String
  age        Int?
  score      Float?
  isActive   Boolean  @default(true)
  readonly   Boolean  @default(false)
  hash       String?
  schemaHash String?
  data       Json
  meta       Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("test_tables")
}

model Row {
  versionId String   @id
  id        String
  data      Json
  createdAt DateTime @default(now())
  tables    Table[]  @relation("RowToTable")
}

model Table {
  versionId String @id
  id        String
  rows      Row[]  @relation("RowToTable")
}